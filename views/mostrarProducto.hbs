<!-- Section: Product detail -->
<section id="productDetails" class="pb-5 container">
  <!-- News card -->
  <div class="card mt-5 hoverable">
    <div class="row mt-5">
      <div class="col-lg-6">
        <!-- Carousel Wrapper -->
        <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
          <!-- Slides -->
          <div class="carousel-inner text-center text-md-left" role="listbox">
            <div class="carousel-item active">
              <img src="../uploads/{{producto.imagenes.[0]}}" alt="First slide" class="img-fluid center">
            </div>
            <div class="carousel-item">
              <img src="../uploads/{{producto.imagenes.[1]}}" alt="Second slide" class="img-fluid center">
            </div>
          </div>
          <!-- Slides -->
          <!-- Thumbnails -->
          <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
          <!-- Thumbnails -->
        </div>
        <!-- Carousel Wrapper -->
      </div>
      <div class="col-lg-5 mr-3 text-center text-md-left">
        <div class="pull-right">
          <span class="text-muted">Estado del carrito</span> <a href="/carrito" class="btn btn-link"><i
              class="fa fa-shopping-cart"></i> {{session.carrito.cantidadTotal}} artículos</a>
        </div>
        <h2
          class="h2-responsive text-center text-md-left product-name font-weight-bold dark-grey-text mb-1 ml-xl-0 ml-4">
          <strong>{{producto.nombre}}</strong>
        </h2>
        {{#if producto.estado}}
        <span class="badge badge-info product mb-4 ml-xl-0 ml-4">Nuevo</span>
        {{else}}
        <span class="badge badge-danger product mb-4 ml-xl-0 ml-4">Oferta</span>
        {{/if}}
        <h3 class="h3-responsive text-center text-md-left mb-5 ml-xl-0 ml-4">
          <span class="red-text font-weight-bold">
            <strong>$. {{producto.precio}}</strong>
          </span>
        </h3>
        <!-- Accordion wrapper -->
        <div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
          <!-- Accordion card -->
          <div class="card">
            <!-- Card header -->
            <div class="card-header" role="tab" id="headingOne1">
              <a data-toggle="collapse" data-parent="#accordionEx" href="" aria-expanded="true"
                aria-controls="collapseOne1">
                <h5 class="mb-0">
                  Descripción
                </h5>
              </a>
            </div>
            <!-- Card body -->
            <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
              data-parent="#accordionEx">
              <div class="card-body">
                {{producto.descripcion}}
              </div>
            </div>
          </div>
          <!-- Accordion card -->
        </div>
