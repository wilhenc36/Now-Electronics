<div class="page-header page-header-xs">
  <div class="filter"></div>
</div>
<div class="main">
  <div class="section">
    <div class="container">
      <div class="row title-row">
        <div class="col-md-2">
          <h4 class="shop">Comprar</h4>
        </div>
        <div class="col-md-4 ml-auto">
          <div class="pull-right">
            <span class="text-muted">Estado del carrito</span> <a href="#" class="btn btn-link"><i
                class="fa fa-shopping-cart"></i> {{productosCarrito}} art√≠culos</a>
          </div>
        </div>
      </div>
      <div class="row">
          <div class="ewk_cont_banner">
            <div class="ewk_sobra">
              <!--<h1 style="color: white;">Autos Clasicos</h1>-->
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="../uploads/{{producto.imagenes.[0]}}" cwidth="200" height="200" alt="Imagen del producto">
                  </div>
                  <div class="carousel-item">
                   <img src="../uploads/{{producto.imagenes.[1]}}" cwidth="200" height="200" alt="Imagen del producto">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        
        <div class="col-md-5 col-sm-6">
          <h2>{{producto.nombre}}</h2>
          <h4 class="price"><strong>L {{producto.precio}}</strong></h4>
          <hr />
          <p>{{producto.descripcion}}</p>
          <h6>Usuario: {{producto.vendedor.nombre}}</h6>
          <hr />
          <div class="row">
            <div class="col-md-7 offset-md-5 col-sm-8">
              <a href="/carrito/{{producto.url}}" class="btn btn-danger-btn-block-btn-round">Agregar al carrito</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>