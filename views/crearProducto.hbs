<div class="main">
  <div class="section">
    <div class="container">
      <h3>Agregar producto</h3>
      <div>
        {{!-- Mensajes para el usuario --}}
        {{> showMessages messages}}
        <form action="/crear-producto" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-5 col-sm-5">
              <h6>Imagen del producto</h6>
              <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                <div class="fileinput-new thumbnail img-no-padding">
                  <img src="/img/logoo.jpeg" style="max-width: 300px; max-height: 200px;" alt="...">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail img-no-padding"
                  style="max-width: 370px; max-height: 250px;"></div>
                <div>
                  <span class="btn btn-outline-default btn-round btn-file"><span class="fileinput-new">Seleccione una
                      imagen</span><span class="fileinput-exists">Cambiar</span><input type="file" name="imagen"
                      multiple></span>
                  <a href="#paper-kit" class="btn btn-link btn-danger fileinput-exists" data-dismiss="fileinput"><i
                      class="fa fa-times"></i> Quitar</a>
                </div>
              </div>
              <h6>Etiquetas</h6>
              <div id="tags">
                <input class="tagsinput" data-color="success" type="text" data-role="tagsinput"
                  placeholder="etiquetas separadas por coma" />
                {{!-- <div class="tagsinput-add"></div> --}}
                <!-- You can change "tag-primary" with with "tag-info", "tag-success", "tag-warning","tag-danger" -->
              </div>
              <h6>Estado <span class="icon-danger">*</span></h6>
              <div class="form-check-radio">
                <input class="form-check-input" type="radio" name="estado" id="estadoNuevo" value="nuevo" checked>
                <label class="form-check-label">
                  Nuevo
                  <span class="form-check-sign"></span>
                </label>
              </div>
              <div class="form-check-radio">
                <input class="form-check-input" type="radio" name="estado" id="estadoUsado" value="usado">
                <label class="form-check-label">
                  Usado
                  <span class="form-check-sign"></span>
                </label>
              </div>
            </div>
            <div class="col-md-7 col-sm-7">
              <div class="form-group">
                <h6>Nombre <span class="icon-danger">*</span></h6>
                <input type="text" class="form-control border-input" placeholder="producto electronico" name="nombre">
              </div>
              <div class="form-group">
                <h6>Precio <span class="icon-danger">*</span></h6>
                <div class="input-group border-input">
                  <input type="text" value="" placeholder="$." class="form-control border-input" name="precio">
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-money-bill-alt"></i></span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <h6>Descripción <span class="icon-danger">*</span< /h6>
                    <textarea class="form-control textarea-limited" placeholder="Tipo de producto" rows="13"
                      maxlength="250" name="descripcion"></textarea>
                    <h5><small><span id="textarea-limited-message" class="pull-right">250 caracteres
                          máximo</span></small>
                    </h5>
              </div>
            </div>
          </div>
          <div class="row buttons-row">
            <div class="col-md-4 col-sm-4">
              <button class="btn btn-outline-danger btn-block btn-round" type="reset">Cancelar</button>
            </div>
            <div class="col-md-4 col-sm-4">
              <button class="btn btn-outline-primary btn-block btn-round" type="submit">Guardar</button>
            </div>
            <div class="col-md-4 col-sm-4">
              <button class="btn btn-primary btn-block btn-round" type="submit">Guardar & publicar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>