<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Dashboard</h1>
            <div class="card mb-4">
                <div class="card-header" style="display:flex; justify-content: space-between;">
                    <div><i class="fas fa-table mr-1"></i>
                        Nuevo usuario
                    </div>
                </div>
                <div class="card-body">
                    <form action="/admin/usuarios/nuevo" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <h6>Nombre del usuario</h6>
                            <input class="form-control" type="text" name="nombre" placeholder="Ingrese el nombre">
                        </div>
                        <div class="form-group">
                            <h6>Correo del usuario</h6>
                            <div class="input-group border-input">
                                <input class="form-control" type="email" name="email"
                                    placeholder="Ingrese el correo electronico">
                            </div>
                        </div>
                        <div class="form-group">
                            <h6>Contraseña del usuario</h6>
                            <input class="form-control" type="password" name="password"
                                placeholder="Ingrese la contraseña">
                        </div>
                        <div class="form-group">
                            <h6>Rol del usuario</h6>
                            <select class="form-control" name="rol" id="rol">
                                <option name="rol" value="">Seleccione una opción...</option>
                                <option name="rol" value="nuevo">admin</option>
                                <option name="rol" value="oferta">usuario</option>
                            </select>
                        </div>
                        <div class="form-group" style="display: flex; justify-content: space-between;">
                            <input class="form-control btn-primary btn-round " type="submit" value="Guardar">
                            <a class="form-control btn-danger btn-round text-center" href="/admin/usuarios">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>