<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Dashboard</h1>
            <div class="card mb-4">
                <div class="card-header" style="display:flex; justify-content: space-between;">
                    <div><i class="fas fa-table mr-1"></i>
                        Editar usuario
                    </div>
                </div>
                <div class="card-body">
                    {{#if user}}
                    <form action="/admin/usuarios/editar/{{user._id}}" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <h6>Nombre del usuario</h6>
                            <input class="form-control" type="text" name="nombre" value="{{user.nombre}}">
                        </div>
                        <div class="form-group">
                            <h6>Correo del usuario</h6>
                            <div class="input-group border-input">
                                <input class="form-control" type="email" name="email" value="{{user.email}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <h6>Contrase√±a del usuario</h6>
                            <input class="form-control" type="password" name="password" value="{{user.password}}">
                        </div>
                        <div class="form-group">
                            <h6>Rol del usuario</h6>
                            <select class="form-control" name="rol" id="rol">
                                <option name="rol" value="">{{user.rol}}</option>
                                <option name="rol" value="admin">admin</option>
                                <option name="rol" value="usuario">usuario</option>
                            </select>
                        </div>
                        <div class="form-group" style="display: flex; justify-content: space-between;">
                            <input class="form-control btn-primary btn-round " type="submit" value="Actualizar">
                            <a class="form-control btn-danger btn-round text-center" href="/admin/usuarios">Cancelar</a>
                        </div>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>