        <script>
            function initMap() {
                var options = {
                    center: { lat: +14.768049, lng: -88.780046 },
                    zoom: 16,
                };
                var map = new
                    google.maps.Map(document.getElementById("googleMap"), options);

                var marker = new google.maps.Marker({
                    position: { lat: +14.768049, lng: -88.780046 },
                    map: map
                });
            }
        </script>

        <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB56L6PdKJ2J41BZiyt-qdPvACt6HRXGJQ&callback=initMap"></script>
