{{!-- Formulario de registro --}}
<div class="div page-header">
  <h2>.</h2>
  <div class="container">
     {{!-- Mensajes para el usario --}}
    {{>showMessages messages}}
    <div class="row">
      <div class="col-md-10 ml-auto mr-auto">
        <div class="card card-signup">
          <h2 class="card-title">Iniciar sesión</h2>
          <div class="card-body">
            <div class="row">
              <form class="register-form" method="POST" action="/iniciar-sesion">
                <div class="form-group">
                  <div class="input-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" name="email">
                  </div>
                  <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password">
                  </div>
                </div>
                <div class="input-group">
                  <button type="submit" class="btn btn-primary">INICIAR SESIÓN</button>
                </div>
                <div class="forgot">
              <a href="/olvide-password" class="btn btn-link">¿Olvidaste tu contraseña?</a>
            </div>
                <p>No tienes una cuenta? <a href="/crear-cuenta">Registrate</a></p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>